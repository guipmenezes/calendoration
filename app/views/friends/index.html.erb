<p style="color: green"><%= notice %></p>

<div class="container">
  
  <div class="container d-flex justify-content-between mt-4 mb-3">
    <h1>Amigos</h1>
    <%= link_to "Adicionar amigo", new_friend_path, class: "btn btn-primary justify-content-center mt-2 mb-2" %>
  </div>
  

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Endere√ßo</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Mostrar</th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <th><%= link_to friend.id, friend_path(friend) %></th>
          <th><%= friend.name %></th>
          <th><%= friend.address %></th>
          <th><%= friend.email %></th>
          <th><%= friend.phone %></th>
          <th>
            <%= link_to "Mostrar amigo", friend, class: "btn btn-outline-secondary" %>
          </th>
        </tr>
      <% end %>
    </tbody>

  </table>

  <%= will_paginate @friends, class: "page-item justify-content-center" %>
</div>

